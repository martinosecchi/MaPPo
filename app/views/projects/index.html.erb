<% provide(:title, 'Listing all projects') %>

<h1>Listing all projects</h1>
<div class="hero-unit">
<table class="table">
  <tr>
    <th>Project ID</th>
    <th>Project Title</th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.project_id %></td>
    <td><%= link_to project.title, project %></td>
    <% if user_signed_in? %>
    <td><%= link_to "Edit", edit_project_path(project) %></td>
    <td><%= link_to "Delete", project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>

</table>
<% if user_signed_in? %>
<%= link_to '+ Add Project', new_project_path %>
<% end %>
</div>
<br />
<%= link_to "Back", :back %>